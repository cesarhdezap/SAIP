<Page x:Class="InterfazDeUsuario.Cocinero.GUI_VerPedidosPendientes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InterfazDeUsuario.Cocinero" xmlns:controls="clr-namespace:InterfazDeUsuario.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GUI_VerPedidosPendientes">


    <DockPanel>
        <controls:BarraDeEstado x:Name="BarraDeEstado"  DockPanel.Dock="Top" Width="Auto"/>
        <Grid>
            <DataGrid x:Name="DataGridPedidos" HorizontalAlignment="Left" AutoGenerateColumns="True" FontFamily="Tahoma" FontSize="18" Height="376" VerticalAlignment="Top" Width="570">
                
            </DataGrid>
            <Button x:Name="BotonCompletar" Content="Completar" HorizontalAlignment="Left" Margin="618,75,0,0" VerticalAlignment="Top" Width="135" Height="46"/>
            <Button x:Name="BotonVerReceta" Content="Ver Receta" HorizontalAlignment="Left" Margin="618,160,0,0" VerticalAlignment="Top" Width="135" Height="43" Click="BotonVerReceta_Click"/>
        </Grid>
    </DockPanel>

</Page>
