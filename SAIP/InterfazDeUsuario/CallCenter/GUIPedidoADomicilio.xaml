<Page x:Name="GUIPedidoADomicilio1" x:Class="InterfazDeUsuario.CallCenter.GUIPedidoADomicilio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:l ="clr-namespace:LogicaDeNegocio.Convertidores;assembly=LogicaDeNegocio"
        xmlns:local="clr-namespace:InterfazDeUsuario.CallCenter" xmlns:controls="clr-namespace:InterfazDeUsuario.UserControls"
        mc:Ignorable="d"
        Title="SAIP" Height="576" Width="1184">
	<Page.Resources>
		<DataTemplate x:Key="BotonDeAñadir">
			<Button Content="Asignar" Click="ButtonAñadir_Click"></Button>
		</DataTemplate>
		<DataTemplate x:Key="BotonDeEliminar">
			<Button Content="Eliminar" Click="ButtonEliminar_Click"></Button>
		</DataTemplate>
		<DataTemplate x:Key="CampoDeTextoDeCantidadDeIngrediente">
			<TextBox PreviewTextInput="CantidadDeIngrediente_PreviewTextInput" LostFocus="CantidadDeIngrediente_TextChanged" Text="1" Loaded="TextBox_Loaded">
			</TextBox>
		</DataTemplate>
		<l:ConversorDeCantidadAsubtotal x:Key="ConversorDeCantidadAsubtotal"></l:ConversorDeCantidadAsubtotal>
	</Page.Resources>
	<Grid>
		<controls:BarraDeEstado x:Name="BarraDeEstado" Width="Auto" VerticalAlignment="Top"/>
		<DataGrid x:Name="AlimentosDataGrid" AutoGenerateColumns="False" SelectionMode="Single" CanUserAddRows="false" CanUserDeleteRows="False" SelectionUnit="FullRow" Height="116" Margin="23,135,712,0" VerticalAlignment="Top">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Nombre de producto" Binding="{Binding Alimento.Nombre}"></DataGridTextColumn>
				<DataGridTextColumn Header="Código" Binding="{Binding Alimento.Codigo}"></DataGridTextColumn>
				<DataGridTemplateColumn Header="Cantidad" Width="75"  CellEditingTemplate="{StaticResource CampoDeTextoDeCantidadDeIngrediente}" CellTemplate="{StaticResource CampoDeTextoDeCantidadDeIngrediente}"/>
				<DataGridTemplateColumn Header="Eliminar" CellTemplate="{StaticResource BotonDeEliminar}"></DataGridTemplateColumn>
				<DataGridTextColumn Header="Costo unitario" Binding="{ Binding Alimento.Precio}"></DataGridTextColumn>
				<DataGridTextColumn Header="Sub-Total" Binding="{ Binding Converter={ StaticResource ConversorDeCantidadAsubtotal}}"></DataGridTextColumn>
			</DataGrid.Columns>
		</DataGrid>
		<Label x:Name="IvaLabel" Content="IVA(*)" HorizontalAlignment="Left" Margin="23,256,0,0" VerticalAlignment="Top"/>
		<Label x:Name="TotalLabel" Content="TOTAL" HorizontalAlignment="Left" Margin="23,287,0,0" VerticalAlignment="Top"/>
		<Label x:Name="ComentariosOrdenLabel" Content="Comentarios extra" HorizontalAlignment="Left" Margin="23,329,0,0" VerticalAlignment="Top"/>
		<TextBox x:Name="ComentariosOrdenTextBlock" Margin="23,360,712,0" TextWrapping="Wrap" BorderBrush="Black" TextChanged="ComentariosOrdenTextBlock_TextChanged" Height="130" VerticalAlignment="Top"/>
		<Button x:Name="CancelarButton" Content="Cancelar Orden" Margin="23,495,1052,0" VerticalAlignment="Top" Click="CancelarButton_Click"/>
		<Button x:Name="FinalizarButton" Content=" Finalizar Orden" Margin="363,495,712,0" VerticalAlignment="Top" Click="FinalizarButton_Click"/>
		<Label x:Name="IvaValorLabel" Content="0.00" HorizontalAlignment="Left" Margin="440,256,0,0" VerticalAlignment="Top"/>
		<Label x:Name="TotalValorLabel" Content="0.00" HorizontalAlignment="Left" Margin="440,287,0,0" VerticalAlignment="Top"/>
		<DataGrid x:Name="BusquedaDataGrid" AutoGenerateColumns="False" SelectionMode="Single" CanUserAddRows="false" CanUserDeleteRows="False" SelectionUnit="FullRow" HorizontalAlignment="Left" Margin="499,121,0,0" Width="327" Height="393" VerticalAlignment="Top">
			<DataGrid.Columns>
				<DataGridTemplateColumn Width="50"  CellEditingTemplate="{StaticResource BotonDeAñadir}" CellTemplate="{StaticResource BotonDeAñadir}"/>
				<DataGridTextColumn Header="Nombre de producto" Binding="{Binding Nombre}"></DataGridTextColumn>
				<DataGridTextColumn Header="Código" Binding="{Binding Codigo}"></DataGridTextColumn>
				<DataGridTextColumn Header="Costo unitario" Binding="{ Binding Precio}"></DataGridTextColumn>
			</DataGrid.Columns>
		</DataGrid>


		<TextBox x:Name="BusquedaTextBox" Height="23" Margin="499,93,358,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="BusquedaTextBox_TextChanged"/>
		<Label x:Name="NumeroTelefonicoLabel" Content="Número teléfonico" HorizontalAlignment="Left" Margin="857,121,0,0" VerticalAlignment="Top"/>
		<Label x:Name="NombreDeClienteLabel" Content="Nombre del cliente" HorizontalAlignment="Left" Margin="857,175,0,0" VerticalAlignment="Top"/>
		<Label x:Name="DireccionLabel" Content="Dirección" HorizontalAlignment="Left" Margin="857,229,0,0" VerticalAlignment="Top"/>
		<Label x:Name="ComentariosClienteLabel" Content="Comentarios extra" HorizontalAlignment="Left" Margin="857,358,0,0" VerticalAlignment="Top"/>
		<TextBox x:Name="DireccionClienteTextBlock" Height="98" Margin="857,255,22,0" TextWrapping="Wrap" VerticalAlignment="Top" BorderBrush="Black" TextChanged="DireccionClienteTextBlock_TextChanged"/>
		<TextBox x:Name="ComentariosClienteTextBlock" Height="130" Margin="857,384,22,0" TextWrapping="Wrap" VerticalAlignment="Top" BorderBrush="Black" TextChanged="ComentariosClienteTextBlock_TextChanged"/>
		<TextBox x:Name="NumeroTelefonicoTextBox" Height="23" Margin="857,147,123,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="NumeroTelefonicoTextBox_TextChanged"/>
		<TextBox x:Name="NombreDeClienteTextBox" Height="23" Margin="857,201,123,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="NombreDeClienteTextBox_TextChanged"/>
		<Label x:Name="LabelErrorDeCantidad"  HorizontalAlignment="Left" Margin="23,106,0,0" VerticalAlignment="Top" Background="Transparent" Foreground="Red"/>
		<Button x:Name="ButtonLimpiarCliente" Content="Limpiar cliente" HorizontalAlignment="Left" Margin="1065,148,0,0" VerticalAlignment="Top" Width="97" Height="21" IsEnabled="False" Click="ButtonLimpiarCliente_Click"/>

	</Grid>
</Page>
