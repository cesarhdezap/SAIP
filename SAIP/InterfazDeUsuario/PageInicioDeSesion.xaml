<Page x:Class="InterfazDeUsuario.PageInicioDeSesion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:InterfazDeUsuario.UserControls"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InterfazDeUsuario"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageInicioDeSesion">

    <Grid>
        <controls:BarraDeEstado x:Name="BarraDeEstado" Margin="0,0,0,345"></controls:BarraDeEstado>
        <TextBox x:Name="NombreDeUsuarioTextBox" HorizontalAlignment="Center" Height="23" Margin="0,241,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157" TextChanged="NombreDeUsuarioTextBox_TextChanged" TabIndex="1"/>
        <Button x:Name="IniciarSesionButton" Content="Iniciar Sesion" HorizontalAlignment="Center" Margin="358,313,358,0" VerticalAlignment="Top" Width="76" Click="IniciarSesionButton_Click" TabIndex="3"/>
        <Image HorizontalAlignment="Center" Height="156" Margin="0,74,0,0" VerticalAlignment="Top" Width="157" Source="img/italiapizza.jpeg"/>
        <PasswordBox x:Name="ContraseñaPasswordbox" HorizontalAlignment="Center" Margin="0,271,0,0" VerticalAlignment="Top" Width="157" Height="23" PasswordChanged="ContraseñaPasswordbox_PasswordChanged" TabIndex="2"/>

    </Grid>
</Page>
