			<Label Content="Contraseña" HorizontalAlignment="Left" Margin="465,194,0,0" VerticalAlignment="Top" FontSize="14" />
			<PasswordBox x:Name="PasswordboxContraseñaTecnico" HorizontalAlignment="Left" Height="26" Margin="560,197,0,0" VerticalAlignment="Top" Width="230" PasswordChanged="PasswordboxContraseña_PasswordChanged"/>

